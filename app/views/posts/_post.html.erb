<% if post %>
  <div class="my-3" id="<%= dom_id post %>">

    <div class="card" style="width: 25rem;">
      <div class="card-header bg-white">
        <div class="d-flex justify-content-between">
          <div>
            <% if post.user.profile_pic.attached? %>
              <%= image_tag post.user.profile_pic, class: "img-thumbnail rounded-circle", style: "width: 10%" %>
            <% else %>
              <%= image_tag 'user-pp.png', class: "img-thumbnail rounded-circle", style: "width: 10%" %>
            <% end %>
            <span class="fn-bold mx-2"><%= post.user.udername %></span>
          </div>

          <div>
            <div class="dropdown">
              <a class="text-dark fs-4" style="text-decoration:none" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false>"> 
                ...
              </a>

              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Edit post</a></li>
                <li><a class="dropdown-item" href="#">Delete post</a></li>
              </ul>
            </div>
          </div>

        </div>

      </div>
    </div>
    <div class="card-body">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      
        <div class="carousel-inner">
          <% post.images.each_with_index do |img, i| %>
            <div class="carousel-item <%= i==0 ? 'active' : '' %> "  style="height: 25rem">
              <%= image_tag img, class: "d-block w-100", style: "max-height: 100%; object-fit: cover;" %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
          <span class="sr-only"></span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
          <span class="sr-only"></span>
        </a>
        <ol class="carousel-indicators" style="position:static">
          <% post.images.each_with_index do |img, i| %>
            <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= i %>" class=" bg-dark <%= i==0 ? 'active' : '' %>" aria-current="true" aria-label="Slide <%= i+1 %>"></li>
          <% end %>
        </ol>
      </div>

    <p class="card-text"> <span class="fw-bold"><%= post.user.udername %></span> <%= post.caption %> This is a long caption bla bla bal bla bla bla bla bal bla bla</p>

    <small class="text-muted"> <%= time_ago_in_words(post.created_at) %></small>
    </div>

    <div class="card-footer d-flex justify-content-between bg-white">
      <input tyoe="text" class="w-75" placeholder="Add a comment..." style="border:none">
      <a class="text-primary fw-bold" style="text-decoration:none">Post</a>
    </div>
    </div>

  </div>

<% end %>
